html
  head
    link(href='https://vjs.zencdn.net/7.7.6/video-js.css', rel='stylesheet')
    // 그 담에 내가 정의한 css 불러오고
    link(href='/main.css', rel='stylesheet')
    link(href='/modal.css', rel='stylesheet')
    title iCam-plus prototype
  body
    .main_container
      .left_container
        #player_header
          p.player_header_title   무슨 강의 > 강의 이름 ~~~~  
          button.extend_tab_button  확장 버튼 
        video#sample-video.video-js(controls='', preload='auto', poster='/ddiyong.jpeg', data-setup='{}, ', autoplay)
          // src에 내가 넣고싶은 영상 위치 넣고
          source(src='/sample.mp4', type='video/mp4')
      .right_container
        #index_bar
          select#class_index_selector
            option(selected='') 현재 : 1강 - OT
            option 2강 - 강의 제목
            option 3강 - 강의 제목
            option 4강 - 강의 제목
          button#goto_IndexButton  >
        #select_Button_bar
          button.index_button 질문하기
          button.index_button 과제 및 평가
        #question_container
          #main_question
            each q in questions
              #question_bar
                a.time_stamp(onclick='setTime(this);') #{parseInt(q.time/60) < 10 ? `0${parseInt(q.time/60)}` : parseInt(q.time/60)}:#{q.time%60}
                .question_title #{q.title}
              #question_bar_opened
                .question_header
                  a.time_stamp(onclick='setTime(this);') #{parseInt(q.time/60) < 10 ? `0${parseInt(q.time/60)}` : parseInt(q.time/60)}:#{q.time%60}
                  .question_title #{q.title}
                .question_container
                  #question_person
                    p
                      br
                      | 테스트 계정
                  #question_text
                    p(style='word-break:break-all')
                      br
                      |                 #{q.content}
                  #question_professor
                    p
                      br
                      br
                      |  답변자 : 김재현(교수)
                  #answer_text
                    p(style='word-break:break-all')
                      br
                      br
                      |                 이건
                      |                 이렇게
                      |                 하세요
                      |                 ~~~~~~~~~~
                      |                 @@@@@@@@@@@@@@@@
          #question_bottom
            button.question_button(onclick="loadQuestionFrom();") 질문하기
            button.comment_button 과제 및 평가

      form.modal-form(action='/question' method='POST')
        .modal
          .modal-container
            .form-title &#xC9C8;&#xBB38;&#xC791;&#xC131;&#xD558;&#xAE30;
            .time
              input#questionFormMin.minute(type='text' ,='' placeholder='분' name='minute' required='true')
              input#questionFormSec.second(type='text' ,='' placeholder='초' name='second' required='true')
            input.title(type='text' ,='' placeholder='제목' name='title' required='true')
            textarea.contents(name='content' placeholder='내용' cols='30' rows='10')
            input.submit(type='submit' value='작성하기')    

    script.
      function setTime(obj) {
        var value = obj.innerText;
        var timeList = value.split(':');
        var time = parseInt(timeList[0])*60 + parseInt(timeList[1]);
        var player = videojs('sample-video');
        player.currentTime(time);
        player.play();
      }
      function loadQuestionFrom() {
        var player = videojs('sample-video');
        var min = parseInt(player.currentTime()/60);
        var sec = parseInt(player.currentTime()%60);

        document.getElementById('questionFormMin').value = min;
        document.getElementById('questionFormSec').value = sec;
      }
    // 기본 js 먼저 불러오고
    script(src='https://vjs.zencdn.net/7.7.6/video.js')
    // 그 담에 내가 정의한 js 불러오면 됨
    script(src='/js/videojs.js')
    script(src='/js/jquery-3.5.1.js')
    script(src='/js/source.js')
    script(src='/js/modal.js')
